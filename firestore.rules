
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================
    // ====== HELPERS ======
    // =====================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // =====================
    // ====== JOBS =========
    // =====================
    match /jobs/{jobId} {
      // Public read
      allow read: if true;

      // User đăng nhập hoặc admin
      allow create: if isSignedIn() || isAdmin();

      // Cho phép update (vd tăng applicantCount)
      allow update: if isSignedIn() || isAdmin();

      // Chỉ chủ job hoặc admin được xóa
      allow delete: if isAdmin() ||
        (isSignedIn() && resource.data.employerId == request.auth.uid);
    }

    // =====================
    // ====== USERS ========
    // =====================
    match /users/{userId} {
      allow read: if isSignedIn() || isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin() || isOwner(userId);

      // ---- AI CONVERSATIONS (SUBCOLLECTION)
      match /ai_conversations/{msgId} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
    }

    // =========================
    // ===== APPLICATIONS ======
    // =========================
    match /applications/{appId} {
      allow create, update: if isSignedIn() || isAdmin();

      // Read: worker | employer | admin
      // resource == null để tránh crash khi get doc chưa tồn tại
      allow read: if isAdmin() || (
        isSignedIn() && (
          resource == null ||
          resource.data.workerId == request.auth.uid ||
          resource.data.employerId == request.auth.uid
        )
      );

      // ----- SUBCOLLECTION: LOGS
      match /logs/{logId} {
        function getApp() {
          return get(/databases/$(database)/documents/applications/$(appId)).data;
        }

        allow read: if isAdmin() || (
          isSignedIn() && (
            getApp().workerId == request.auth.uid ||
            getApp().employerId == request.auth.uid
          )
        );

        allow create: if isAdmin() || (
          isSignedIn() && getApp().employerId == request.auth.uid
        );
      }
    }

    // =========================
    // ===== NOTIFICATIONS =====
    // =========================
    match /notifications/{notifId} {
      allow read, update: if isAdmin() ||
        (isSignedIn() && resource.data.userId == request.auth.uid);

      allow create: if isSignedIn() || isAdmin();
    }

    // =========================
    // ===== CONVERSATIONS =====
    // =========================
    match /conversations/{convoId} {
      allow read, create, update: if isAdmin() ||
        (isSignedIn() && request.auth.uid in resource.data.participants);

      // ---- SUBCOLLECTION: MESSAGES
      match /messages/{msgId} {
        allow read, create, update: if isAdmin() || isSignedIn();
      }
    }

    // =========================
    // ===== DEFAULT DENY ======
    // =========================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
